<Window x:Name="window1" x:Class="Hotkey_Pad_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotkey_Pad_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF1001A6" MouseDoubleClick="window1_MouseDoubleClick" SizeChanged="window1_SizeChanged">
    <Grid>
        <TabControl x:Name="tabControl1" HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="792" Background="{x:Null}">
            <TabItem x:Name="tabItemPad" Header="Pad" Background="#FF210FD4" BorderBrush="#FF210FD4">
                <Grid HorizontalAlignment="Left" Height="387" VerticalAlignment="Top" Width="784" Cursor="None" Margin="0,2,0,0"/>
            </TabItem>
            <TabItem x:Name="tabItemPadEditor" Header="Pad Editor" Background="#FF210FD4" Height="22" VerticalAlignment="Top">
                <Grid HorizontalAlignment="Left" Height="387" VerticalAlignment="Top" Width="784" Cursor="None" Margin="0,2,0,0"/>
            </TabItem>
            <TabItem x:Name="tabItemSettings" Header="Settings" Background="#FF210FD4" Height="22" VerticalAlignment="Top" RenderTransformOrigin="1.199,1.568" Margin="-1,0,-45,0"/>
        </TabControl>

    </Grid>
</Window>
